#version 330

uniform sampler2D ourTexture;
uniform int mode = 0;

in vec3 OutColor;
in vec2 TexCoord;

out vec4 finalColor;

void main()
{
	if(mode == 0)
	{
		finalColor = vec4( OutColor, 1.0 ); 
	} 
    else
    {
    	finalColor = texture(ourTexture, TexCoord);
		
		//if(finalColor.w >= 0.5)
		//{
		//	finalColor.w = 0.5;
		//}
    }
}